<Window x:Class="sqlProject.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sqlProject"
        mc:Ignorable="d"
        Title="SignUpWindow"
        Height="750"
        Width="750"
        MinWidth="550"
        MinHeight="750"
        WindowStartupLocation="CenterScreen"
        Style="{DynamicResource WindowBaseStyle}">
    <Window.Resources>
        <Style
            BasedOn="{StaticResource TextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter
                Property="FontSize"
                Value="30"/>
            <Setter
                Property="Margin"
                Value="0,10"/>
            <Setter
                Property="TextWrapping"
                Value="Wrap"/>
        </Style>
        <Style
            BasedOn="{StaticResource TextBoxBaseStyle}"
            TargetType="TextBox">
            <Setter
                Property="Padding"
                Value="7.5,10"/>
            <Setter
                Property="FontSize"
                Value="25"/>
        </Style>
        <Style
            BasedOn="{StaticResource ButtonBaseStyle}"
            TargetType="Button">
            <Setter
                Property="FontSize"
                Value="20"/>
            <Setter
                Property="Padding"
                Value="0,15"/>
            <Setter
                Property="MaxWidth"
                Value="130"/>
            <Setter
                Property="Cursor"
                Value="Hand"/>
        </Style>
    </Window.Resources>
    <Grid
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
        Margin="100">
        <StackPanel
            MaxWidth="500">
            <TextBlock
                Text="Создание аккаунта"
                TextAlignment="Center"
                FontSize="40"
                Margin="0,0,0,15"/>
            <TextBlock
                Text="Имя"/>
            <TextBox
                Name="NameInput"
                TextChanged="InputChanged"/>
            <TextBlock
                Text="Пароль"/>
            <TextBox
                Name="PasswordInput"
                TextChanged="InputChanged"/>
            <Button
                Name="TrySignUpButton"
                Content="Cоздать"
                Click="TrySignUp"
                Margin="0,7.5,0,5"
                IsEnabled="False"/>
            <TextBlock
                TextAlignment="Center"
                FontSize="20"
                Margin="0,5"
                TextWrapping="Wrap">
                <Run
                    Text="У меня уже есть аккаунт"
                    MouseDown="BackToSignInWindow"
                    Style="{DynamicResource HighlightRunStyle}"/>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
