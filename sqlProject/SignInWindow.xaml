    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Margin="100 0">
        <TextBlock
            Text="Авторизируйтесь, чтобы начать"
            Style="{DynamicResource TextStyle}"
            TextWrapping="Wrap"
            Margin="0, 15"
            TextAlignment="Center"/>
        <TextBox
            Name="NameInput"
            Style="{DynamicResource RoundedTextBox}"
            Padding="15"
            Margin="0 3.5"
            FontSize="30"/>
        <TextBox
            Name="PasswordInput"
            FontSize="30"
            Style="{DynamicResource RoundedTextBox}"
            Padding="15"
            Margin="0 3.5">
        </TextBox>
        <Button
            Style="{DynamicResource RoundedButton}"
            Content="Войти"
            Click="TryLogIn"
            BorderThickness="0"
            FontSize="25"
            Padding="0 12.5"
            Margin="0 5"
            MaxWidth="150"
            Cursor="Hand"/>
        <TextBlock
            FontSize="25"
            TextAlignment="Center"
            Margin="0 15"
            Style="{DynamicResource TextStyle}">
            <Run
                Text="Впервые здесь?"/>
            <Run 
                Text="Создать аккаунт" 
                Cursor="Hand"
                TextDecorations="Underline"/>
        </TextBlock>
    </StackPanel>
